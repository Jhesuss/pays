mixin button_pays
    form(target="paypal" action="https://www.sandbox.paypal.com/cgi-bin/webscr" method="post")
        input(type="hidden" name="cmd" value="_s-xclick")
        input(type="hidden" name="hosted_button_id" value="AMXP343T2DYSE")
        input(type="image" src="../assets_web/assets/contrata.svg" border="0" name="submit" alt="Paga por PayPal")
        img(alt="" border="0" src="../assets_web/assets/contrata.svg" width="1" height="1")


mixin button_date
    button(data-operation='change-monthly').slide-1 Mensual
    button(data-operation='change-annual').slide-250 Anual