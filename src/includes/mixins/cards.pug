        article#mobile_card.card
            .card__head    
                h2.card__title PREMIUM 
                .plan__info
                    span.plan Plan
                    .type_plan= plan
                span.save= percent
                .card__subhead
                    span.symbolPrice $
                    span.priceNumber= price
                    span.symbolPrice  USD 
                    //- Modificar el .discount al igual que USD
                    .container_discount
                        .discount= priceDiscount 
                        span.date /mes
            
            .card__body
                p.benefits beneficios
                    ul.card__body
                        li.li.card__item description example as information
                        li.li.card__item description example as information
                        li.li.card__item description example as information
                        li.li.card__item description example as information    
            .card__bottom
                +button_pays

